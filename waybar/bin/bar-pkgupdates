#!/bin/bash
set -eEu
set -o pipefail

function Check() {
    pac=$(checkupdates | wc -l)
    aur=$(yay -Qua | wc -l)

    check=$((pac + aur))
    if [ "$check" != "0" ]; then
        echo "$pac;$aur"
    fi
}

function Open() {
    bar-term "yay -Qu; yay -Syu; kill --signal USR1 '$PPID'"
}

case "${1:-}" in
    --open)
        Open
        exit 0
        ;;
    *)
        Check
        exit 0
        ;;
esac
