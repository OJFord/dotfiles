[advice]
    statusHints = false

[alias]
    amend = commit --amend
    changes = git log HEAD...@{upstream} --left-right --graph
    find-commit = log --oneline --pretty=format:'%C(auto)%h %C(white italic)%s %C(green)(%cr)' --grep
    fixup = "!f(){ target=$(git rev-parse "$1"); git commit --fixup=$target ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $target^; }; f"
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    push-new = "!f(){ remote="$1"; branch="$(git rev-parse --abbrev-ref HEAD)"; git push --set-upstream "$remote" "$branch"; }; f"
    released = tag --contains
    recap = log --decorate --oneline --pretty=format:'%C(green)%cr: %C(white italic)%s %C(auto)%d' -n10 --author=@ojford.com
    staged = diff --cached
    uncommit = reset HEAD~1

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    pager = true
    showBranch = auto
    status = auto
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = 238 bold green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[commit]
    cleanup = strip
    gpgsign = true

[core]
    editor = vim
    pager = less

[diff]
    algorithm = histogram
    compactionHeuristic = true
    context = 3
    indentHeuristic = true
    interHunkContext = 1
    noprefix = true
    wordRegex = [^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+

[diff-so-fancy]
    markEmptyLines = false

[filter "hawser"]
    required = true
    clean = git hawser clean %f
    smudge = git hawser smudge %f

[filter "lfs"]
    required = true
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f

[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f

[gpg]
    program = gpg

[help]
    autocorrect = 1

[interactive]
    singleKey = true
    diffFilter = "diff-highlight"

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX

[pull]
    rebase = true

[rebase]
    stat = false
    autoSquash = true
    autoStash = true
    missingCommitsCheck = "error"

[status]
    short = true
    branch = true

[tag]
    forceSignAnnotated = true

[user]
    name = Ollie Ford
    email = dev@ojford.com
    signingKey = 5416FF3DC5019E23FFDB27418CED39B8064CDC3D
