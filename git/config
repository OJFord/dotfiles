[user]
    name = Ollie Ford
    email = dev@ojford.com
    signingKey = 555E2CCB0DB272224566ED62152B3280A315B9D9

[gpg]
    program = gpg2

[commit]
    gpgsign = true

[tag]
    forceSignAnnotated = true

[core]
    editor = vim
    pager = less

[interactive]
    singleKey = true

[alias]
    amend = commit --amend
    changes = git log HEAD...@{upstream} --left-right --graph
    find-commit = log --oneline --pretty=format:'%C(auto)%h %C(white italic)%s %C(green)(%cr)' --grep
    fixup = "!f(){ target=$(git rev-parse "$1"); git commit --fixup=$target ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $target^; }; f"
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    released = tag --contains
    recap = log --decorate --oneline --pretty=format:'%C(green)%cr: %C(white italic)%s %C(auto)%d' -n10 --author=@ojford.com
    staged = diff --cached

[help]
    autocorrect = 1

[advice]
    statusHints = false

[status]
    short = true
    branch = true

[pull]
    rebase = true

[rebase]
    stat = false
    autoSquash = true
    autoStash = true
    missingCommitsCheck = "error"

[diff]
    compactionHeuristic = true
    noprefix = true

[diff-so-fancy]
    markEmptyLines = false

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX

[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f

[filter "hawser"]
    required = true
    clean = git hawser clean %f
    smudge = git hawser smudge %f

[filter "lfs"]
    required = true
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f

[color]
    ui = always

[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = 238 bold green

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
