keycode 101 = XF86MonBrightnessDown
keycode 212 = XF86MonBrightnessUp

keycode 144 = XF86AudioPrev
keycode 162 = XF86AudioPlay
keycode 153 = XF86AudioNext
keycode 160 = XF86AudioMute
keycode 176 = XF86AudioRaiseVolume
keycode 174 = XF86AudioLowerVolume


clear shift
clear lock
clear control
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5

add shift = Shift_L Shift_R
add control = Control_L Control_R
add mod1 = Alt_L Alt_R
add mod4 = Super_L Super_R

! Remap caps lock to modifier
! - used for i3
!clear Lock
!add Mod3 = 66

! Swap Ctrl and Cmd keys
! - allows Cmd in copy/paste/select-all
! - will require switching use of `C` and `M` in configs
!clear Control
!clear Mod4
!add Control = Super_trL Super_R
!add Mod4 = Control_L
