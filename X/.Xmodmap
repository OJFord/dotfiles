! Swap alt+super
keycode 64 = Super_L
keycode 133 = Alt_L
clear mod1
add mod1 = Alt_L
clear mod4
add mod4 = Super_L

! Caps -> Escape
keycode 66 = Escape
clear control
add control = Control_L
! - stop caps lock light (but keep num lock)
clear lock
add mod2 = Num_Lock

! Slightly Americanize [sic] but keep AltGr keys
! - swap @ & "
keycode 11 = 2 at twosuperior oneeighth
keycode 48 = apostrophe quotedbl dead_circumflex dead_caron
! - three-way swap | & ~ & useless Â¬
keycode 49 = grave asciitilde bar notsign
keycode 51 = numbersign bar dead_grave dead_breve
keycode 94 = backslash notsign bar brokenbar
