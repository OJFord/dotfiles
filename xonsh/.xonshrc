XDG_CONFIG_HOME = '{}/.config'.format($HOME)
XDG_RUNTIME_DIR = '/var/run'

$PATH = [
    '/usr/local/Homebrew',
    '/usr/local/opt/coreutils/libexec/gnubin',
    '/usr/local/bin',
    '/usr/bin',
    '/usr/sbin',
    '/bin',
]
$MANPATH = [
    '/usr/local/opt/coreutils/libexec/gnuman',
    '/usr/local/share/man/man1',
    '/usr/local/share/man/man3',
    '/usr/local/share/man/man5',
    '/usr/local/share/man/man7',
    '/usr/local/share/man/man8',
]

import sys
sys.path.extend([
    p for p in eval($(python3 -c 'import sys; print(sys.path)'))
    if p not in sys.path
])

# Set SSH to use gpg-agent
$GNUPGHOME = '{}/gnupg'.format($XDG_CONFIG_HOME)
if 'SSH_AGENT_PID' in ${...}:
    del $SSH_AGENT_PID
if not !(gpg-agent):
    gpg-agent --enable-ssh-support --daemon > /dev/null
$SSH_AUTH_SOCK = '{}/S.gpg-agent.ssh'.format($GNUPGHOME)
$GPG_TTY = $(tty)

$VIMDIR = '{}/vim'.format($XDG_CONFIG_HOME)
$VIMRC = '{}/.vimrc'.format($VIMDIR)

$XONSH_CONFIG_DIR = '{}/xonsh'.format($XDG_CONFIG_HOME)
$XONSHRC = '{}/.xonshrc'.format($XONSH_CONFIG_DIR)

aliases.update({
    'dc': 'docker-compose',
    'fk': lambda args, stdin=None: execx(
        $(thefuck @(__xonsh_history__.inps[-1]))
    ),
    'gitl': 'git lol',
    'gits': 'git status',
    'gpg': 'gpg2',
    'gz': 'tar -zcvf',
    'ls': 'ls --color=always',
    'll': 'ls -l',
    'lla': 'll -A',
    'ping': 'prettyping',
    'pip': 'pip3',
    'python': 'python3',
    'vim': 'vim -u {}'.format($VIMRC),
})
