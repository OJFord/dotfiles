    p for p in eval($(python3 -c 'import sys; print(sys.path)'))
    if p not in sys.path
])


def git_cwd():
    dot_git_dir = !(git rev-parse --is-inside-git-dir)
    if dot_git_dir:
        from os import path

        if dot_git_dir.stdout == 'true\n':
            git_root = path.join($(git rev-parse --git-dir)[:-1], '..')
        else:
            git_root = path.join($(git rev-parse --show-toplevel)[:-1])
        git_root = path.realpath(git_root).replace('/Users/ojf', '~')

        return '{git_root}/({git_status}){git_relative_dir}'.format(
            git_root=git_root,
            git_status=$FORMATTER_DICT['gitstatus'](),
            git_relative_dir=$FORMATTER_DICT['cwd']().replace(git_root, '')[1:]
        )
    else:
        return $FORMATTER_DICT['cwd']()
$FORMATTER_DICT['git_cwd'] = git_cwd
$PROMPT = '{env_name:[{}] }{git_cwd}{prompt_end}'


# Set SSH to use gpg-agent
