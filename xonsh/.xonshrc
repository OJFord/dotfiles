XDG_CONFIG_HOME = $HOME + '/.config'
XDG_RUNTIME_DIR = '/var/run'

$PATH = [
    '/usr/local/bin',
    '/usr/local/opt/coreutils/libexec/gnubin',
    '/usr/bin',
    '/usr/sbin',
    '/bin',
]
$MANPATH = [
    '/usr/local/opt/coreutils/libexec/gnuman',
    '/usr/local/share/man/man1',
    '/usr/local/share/man/man3',
    '/usr/local/share/man/man5',
    '/usr/local/share/man/man7',
    '/usr/local/share/man/man8',
]

import sys
sys.path.extend([
    p for p in eval($(python3 -c 'import sys; print(sys.path)'))
    if p not in sys.path
])

# Set SSH to use gpg-agent
$GNUPGHOME = $XDG_CONFIG_HOME + '/gnupg'
if 'SSH_AGENT_PID' in ${...}:
    del $SSH_AGENT_PID
if not !(gpg-agent):
    gpg-agent --enable-ssh-support --daemon > /dev/null
$SSH_AUTH_SOCK = $GNUPGHOME + '/S.gpg-agent.ssh'
$GPG_TTY = $(tty)

$XONSH_CONFIG_DIR = $XDG_CONFIG_HOME + '/xonsh'
$XONSHRC = $XONSH_CONFIG_DIR + '/.xonshrc'

$VIM = $XDG_CONFIG_HOME + '/vim'
$VIMRC = $VIM + '/.vimrc'
$VIMINIT = 'source $VIMRC'

aliases.update({
    'dc': 'docker-compose',
    'fk': lambda args, stdin=None: execx(
        $(thefuck @(__xonsh_history__.inps[-1]))
    ),
    'gitl': 'git lola',
    'gits': 'git status',
    'gpg': 'gpg2',
    'gz': 'tar -zcvf',
    'ls': 'ls --color=always',
    'll': 'ls -l',
    'lla': 'll -A',
    'ping': 'prettyping'
})

