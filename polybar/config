[module/gh-issues]
    type = custom/script
    exec = polybar-gh-issues | jq -r 'length'
    interval = 900
    format-prefix = "ÔÇõ "
    label = "%output%"
    click-left = polybar-gh-issues --open

[module/memory]
    type = internal/memory

[module/date]
    type = internal/date
    interval = 15
    date = %d/%m
    time = %H:%M
    label = "%date% üï∞Ô∏è %time%"

[module/i3]
    type = internal/i3
