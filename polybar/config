    label-unfocused = %index%
    pin-workspaces = true
    strip-wsnumbers = true

[module/pkgupdates]
    type = custom/script
    exec = polybar-pkgupdates
    format-prefix = "ÔÄ° "
    format-prefix-foreground = #5b
    format-underline = #dc322f
    interval = 1200
    label = "%output:0:7%"

