general {
	colors = true
	color_good = "#BBBBBB"
	color_bad = "#CC1616"
	color_degraded = "#55858E"
	interval = 5
}

order += "disk /"
order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "tztime local"

disk "/" {
	format = " ¨ %avail:/ " 
}

battery 0 { 
}

wireless wlan0 {
	format_up = " W: (%quality at %essid) %ip "
	format_down = " ☡ WiFi "
}

ethernet eth0 {
	format_up =  " Ω: %ip  "
	format_down = " ∅ eth0  "
}

tztime local {
	format = " %h-%d %H:%M "
}
